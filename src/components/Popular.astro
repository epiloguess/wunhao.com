---
import { getCollection } from "astro:content";
import ViewALL from "./ViewAll.astro";

const allPosts = await getCollection("docs");
const PostsStorted = allPosts.sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
const PopularPosts = PostsStorted.filter((post) => post.data.popular == true);
import { Image } from "astro:assets";
---

<div class="flex flex-col gap-5">
  <section class="flex justify-between items-center">
    <h2 class="text-3xl font-bold">Popular</h2>
    <ViewALL path="/tags/popular" />
  </section>

  <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-4">
    {
      PopularPosts.slice(0, 6).map((post) => (
        <div class=" border-gray-300 md:border border-solid rounded p-0 md:px-4 md:py-2 xl:py-4 flex items-center gap-4">
          <a class="flex flex-col gap-1  " href={`/docs/${post.slug}`}>
            <time class=" text-gray-500 hidden md:block text-sm">{`${
              post.data.pubDate.getMonth() + 1
            } 月 ${post.data.pubDate.getDate()} 日， ${post.data.pubDate.getFullYear()}`}</time>
            <text>{post.data.title}</text>
          </a>
        </div>
      ))
    }
  </div>
</div>

