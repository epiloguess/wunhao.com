---
const { categories, tags, pubDate } = Astro.props;
---

<div class="flex flex-col gap-2 pb-2">
  <section class="flex gap-4 items-center">
    <h2 class="font-bold">发布于</h2>
    <div>
      {
        ` ${pubDate.getFullYear()} 年 ${
          pubDate.getMonth() + 1
        } 月 ${pubDate.getDate()} 日 `
      }
    </div>
  </section>

  <section class="flex gap-4 items-center">
    <h2 class="font-bold">Categories:</h2>
    <div class="flex flex-wrap gap-2">
      {
        categories.map((tag) => (
          <a href={`/categories/${tag}`} class=" underline text-indigo-500">
            {tag}
          </a>
        ))
      }
    </div>
  </section>
  <section class="flex gap-4 items-center">
    <h2 class="font-bold">Tags:</h2>
    <div class="flex flex-wrap gap-2">
      {
        tags.map((tag) => (
          <a class=" underline text-indigo-500" href={`/tags/${tag}`}>
            {tag}
          </a>
        ))
      }
    </div>
  </section>
</div>
