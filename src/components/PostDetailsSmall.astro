---
const { categories, tags, pubDate } = Astro.props;
---

<div class="flex flex-col gap-2 pb-2">
  <section class="flex gap-4 items-center">
    <h2 class="font-bold">发布于</h2>
    <div>
      {
        ` ${pubDate.getFullYear()} 年 ${
          pubDate.getMonth() + 1
        } 月 ${pubDate.getDate()} 日 `
      }
    </div>
  </section>

  <section class="flex gap-4 items-center">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="icon icon-tabler icon-tabler-category"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M4 4h6v6h-6z"></path>
      <path d="M14 4h6v6h-6z"></path>
      <path d="M4 14h6v6h-6z"></path>
      <path d="M17 17m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path>
    </svg>
    <div class="flex flex-wrap gap-2">
      {
        categories.map((tag) => (
          <a href={`/categories/${tag}`} class="  text-indigo-500">
            {tag}
          </a>
        ))
      }
    </div>
  </section>
  <section class="flex gap-4 items-center">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="icon icon-tabler icon-tabler-tags"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path
        d="M7.859 6h-2.834a2.025 2.025 0 0 0 -2.025 2.025v2.834c0 .537 .213 1.052 .593 1.432l6.116 6.116a2.025 2.025 0 0 0 2.864 0l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-6.117 -6.116a2.025 2.025 0 0 0 -1.431 -.593z"
      ></path>
      <path
        d="M17.573 18.407l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-7.117 -7.116"
      ></path>
      <path d="M6 9h-.01"></path>
    </svg>
    <div class="flex flex-wrap gap-2">
      {
        tags.map((tag) => (
          <a class="  text-indigo-500" href={`/tags/${tag}`}>
            {tag}
          </a>
        ))
      }
    </div>
  </section>
</div>
