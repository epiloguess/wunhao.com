---
import Layout from "../Card.astro";
const { post } = Astro.props;
const NameOfFatherFolder = post.id
  .split("/")
  .slice(0, post.id.split("/").length - 1)
  .join("/");
---

<Layout title="Post Details">
  <div class="flex flex-col gap-4">
    <section>
      <ul class="marker:text-sky-400 list-disc pl-5 space-y-3 text-sm">
        <li>
          {
            ` ${post.data.pubDate.getFullYear()} 年 ${
              post.data.pubDate.getMonth() + 1
            } 月 ${post.data.pubDate.getDate()} 日 `
          }
        </li>
      </ul>
    </section>
    <section class="flex flex-col gap-4">
      <h2 class="font-bold text-sm">Collection</h2>
      <div class="flex flex-wrap gap-2">
        <ul class="marker:text-sky-400 list-disc pl-5 space-y-3 text-sm">
          <li>
            <a
              href={`/collections/${NameOfFatherFolder}`}
              class="text-indigo-500"
            >
              {NameOfFatherFolder}
            </a>
          </li>
        </ul>
      </div>
    </section>

    <section class="flex flex-col gap-4">
      <h2 class="font-bold text-sm">Tags</h2>
      <div class="flex flex-wrap gap-2">
        {
          post.data.tags.map((tag) => (
            <a
              class="text-gray-600 bg-gray-100 px-2 py-1 rounded-md text-sm border hover:border-green-500"
              href={`/tags/${tag}`}
            >
              {tag}
            </a>
          ))
        }
      </div>
    </section>
  </div>
</Layout>
