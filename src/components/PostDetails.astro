---
import Layout from "./Card.astro";
const { categories, tags, pubDate } = Astro.props;
---

<Layout title="Post Detailes">
  <div class="flex flex-col gap-5">
    <section>
      <ul class="marker:text-sky-400 list-disc pl-5 space-y-3 text-sm">
        <li>
          发布于{
            ` ${pubDate.getFullYear()} 年 ${
              pubDate.getMonth() + 1
            } 月 ${pubDate.getDate()} 日 `
          }
        </li>
      </ul>
    </section>
    <section class="flex flex-col gap-5">
      <h2 class="font-bold">Categories</h2>
      <div class="flex flex-wrap gap-2">
        <ul class="marker:text-sky-400 list-disc pl-5 space-y-3 text-sm">
          {
            categories.map((tag) => (
              <li class=" ">
                <a
                  href={`/categories/${tag}`}
                  class=" underline text-indigo-500"
                >
                  {tag}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </section>
    <section class="flex flex-col gap-5">
      <h2 class="font-bold">Tags</h2>
      <div class="flex flex-wrap gap-2">
        {
          tags.map((tag) => (
            <a
              class=" border hover:border-green-600 rounded-md px-1.5 py-1 bg-gray-50 text-sm"
              href={`/tags/${tag}`}
            >
              {tag}
            </a>
          ))
        }
      </div>
    </section>
  </div>
</Layout>
