---
import ViewALL from "./ViewAll.astro";

const { posts, title, path } = Astro.props;
---

<div class="flex flex-col gap-4 border-b border-gray-300">
  <h2 class="text-2xl font-bold">{title}</h2>
  <div class="flex flex-col gap-5">
    {
      posts.slice(0, 3).map((post) => (
        <div class=" flex flex-col gap-1">
          <a
            class=" py-1 flex flex-col md:flex-row gap-1  justify-between  hover:underline  underline-offset-4 decoration-sky-600 decoration-wavy   "
            href={`/docs/${post.slug}`}
          >
            <text class="text-sky-600 font-bold md:text-black md:font-semibold ">
              {post.data.title}
            </text>
            <div class="flex gap-2 ">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="icon icon-tabler icon-tabler-clock md:hidden "
                width="24"
                height="24"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" />
                <path d="M12 7v5l3 3" />
              </svg>
              <time class=" text-gray-500 italic">{`${
                post.data.pubDate.getMonth() + 1
              } 月 ${post.data.pubDate.getDate()} 日， ${post.data.pubDate.getFullYear()}`}</time>
            </div>
          </a>

          <text class=" md:hidden italic">{post.data.description}</text>
        </div>
      ))
    }
  </div>
  <ViewALL path={path} />
</div>
