---
import ViewALL from "./ViewAll.astro";

const { posts, title, path } = Astro.props;
---

<div class="flex flex-col gap-5">
  <h2 class="text-xl font-bold">{title}</h2>
  <div class="flex flex-col gap-5">
    {
      posts.slice(0, 5).map((post) => (
        <div class=" flex flex-col gap-1">
          <a
            class=" py-1 flex flex-col md:flex-row gap-1  justify-between hover:underline  underline-offset-4 decoration-sky-600 decoration-wavy   "
            href={`/docs/${post.slug}`}
          >
            <text class="text-sky-600 font-bold   ">{post.data.title}</text>
            <div class="flex gap-2 ">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="icon icon-tabler icon-tabler-calendar md:hidden"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z" />
                <path d="M16 3v4" />
                <path d="M8 3v4" />
                <path d="M4 11h16" />
                <path d="M11 15h1" />
                <path d="M12 15v3" />
              </svg>
              <time class=" text-gray-500 italic">{`${
                post.data.pubDate.getMonth() + 1
              } 月 ${post.data.pubDate.getDate()} 日， ${post.data.pubDate.getFullYear()}`}</time>
            </div>
          </a>

          <text class=" md:hidden">{post.data.description}</text>
        </div>
      ))
    }
  </div>
  <ViewALL path={path} />
</div>
