---
import ViewALL from "./ViewAll.astro";

const { posts, title, path } = Astro.props;
---

<div class="flex flex-col gap-4 border-b border-gray-300">
  <h2 class="text-2xl font-bold">{title}</h2>
  <div class="flex flex-col gap-4">
    {
      posts.slice(0, 5).map((post) => (
        <div class="flex flex-col md:flex-row md:justify-between gap-1">
          <a
            class="flex  flex-1 justify-between hover:underline  underline-offset-4 decoration-teal-500 decoration-wavy   "
            href={`/docs/${post.id}`}
          >
            <text class=" ">
              {post.data.title}
            </text>
            <time class="hidden md:block  text-gray-500 italic">{`${
              post.data.pubDate.getMonth() + 1
            } 月 ${post.data.pubDate.getDate()} 日， ${post.data.pubDate.getFullYear()}`}</time>
          </a>
          <time class="md:hidden  text-gray-500 italic">{`${
            post.data.pubDate.getMonth() + 1
          } 月 ${post.data.pubDate.getDate()} 日， ${post.data.pubDate.getFullYear()}`}</time>
          <text class=" md:hidden ">{post.data.description}</text>
        </div>
      ))
    }
  </div>
  <ViewALL path={path} />
</div>
