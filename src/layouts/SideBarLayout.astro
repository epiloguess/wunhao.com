---
interface Props {
  title: string;
}
const { title } = Astro.props;

import Layout from "./BaseLayout.astro";
---

<Layout title={title}>
  <div class="lg:flex justify-between gap-10">
    <section class="flex flex-col gap-10 flex-auto">
      <header>
        <h1 class="text-4xl font-bold">{title}</h1>
      </header>
      <slot name="article-content" />
    </section>
    <section class="hidden lg:block w-[300px] min-w-[300px]">
      <slot name="sidebar-content" />
    </section>
  </div>
</Layout>
<style></style>
