---
const { post } = Astro.props;
import Layout from "./SideBarLayout.astro";

import AboutMe from "../components/index/AboutMe.astro";
import PostDetails from "../components/PostLayout/PostDetails.astro";
import PostDetailsSmall from "../components/PostLayout/PostDetailsSmall.astro";
---

<Layout title={post.data.title}>
  <section slot="article-content">
    <section class="md:hidden">
      <PostDetailsSmall post={post} />
    </section>

    <section
      class="prose prose-headings:border-b-2 prose-headings:border-gray-300 prose-code:before:content-[''] prose-code:after:content-[''] prose-code:text-sky-600 prose-blockquote:border-pink-500 prose-tr:border-b prose-tr:border-gray-300 prose-headings:font-bold"
    >
      <slot />
    </section>
  </section>
  <section slot="sidebar-content" class="flex flex-col gap-4">
    <AboutMe />
    <PostDetails post={post} />
  </section>
</Layout>
